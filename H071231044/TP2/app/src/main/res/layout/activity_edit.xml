<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121a25"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:src="@drawable/duolingo_icon_char"
        android:contentDescription="Avatar" />

    <!-- Ganti Avatar -->
    <TextView
        android:id="@+id/gantiAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GANTI AVATAR"
        android:textColor="#00AEEF"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <!-- Nama -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:text="Chelsea Shelin Purnaria"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:hint="Nama Lengkap"
        android:inputType="textPersonName"
        android:layout_marginTop="4dp" />

    <!-- Username -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama pengguna"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:text="Celziii"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_marginTop="4dp" />

    <!-- Password -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kata sandi"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:hint="********"
        android:text="********"
        android:inputType="textPassword"
        android:layout_marginTop="4dp" />

    <!-- Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:hint="Email"
        android:text="tes@gmail.com"
        android:inputType="textEmailAddress"
        android:layout_marginTop="4dp" />

    <!-- Simpan Button -->
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:textSize="18sp"
        android:textColor="#00AEEF"
        android:backgroundTint="#1e2a3a"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>
