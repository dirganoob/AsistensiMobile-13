<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".MainActivity"
        android:paddingBottom="75dp"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Duolinggo_Background"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_medium"
                android:text="Chelsea Shelin Pur..."
                android:textColor="@color/gray_light"
                android:textSize="65px"
                app:layout_constraintTop_toBottomOf="@id/imageLayout"
                app:layout_constraintEnd_toStartOf="@id/flag2"
                android:layout_marginTop="10dp"
                app:layout_constraintHorizontal_bias="0.091"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.28" />

            <ImageView
                android:id="@+id/flag1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chinese_flag"
                app:layout_constraintTop_toBottomOf="@id/imageLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:id="@+id/flag2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/english_flag"
                app:layout_constraintEnd_toStartOf="@id/flag1"
                app:layout_constraintTop_toTopOf="@id/flag1" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Celziiii"
                android:textColor="@color/gray_light"
                android:textSize="45px"
                app:layout_constraintTop_toBottomOf="@id/nama"
                tools:ignore="MissingConstraints"
                android:paddingStart="20dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/infoGabung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Bergabung Agustus 2021"
                android:textColor="@color/gray_light"
                android:textSize="45px"
                app:layout_constraintTop_toBottomOf="@id/info"
                tools:ignore="MissingConstraints"
                android:paddingStart="20dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/foll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/open_sans"
                android:text="9 Mengikuti   9 Pengikut"
                android:textColor="@color/blue_light"
                android:textSize="45px"
                app:layout_constraintTop_toBottomOf="@id/infoGabung"
                tools:ignore="MissingConstraints,RtlSymmetry"
                android:paddingStart="20dp" />

            <FrameLayout
                android:id="@+id/imageLayout"
                android:layout_width="415dp"
                android:layout_height="230dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/mainImage"
                    android:layout_width="415dp"
                    android:layout_height="230dp"
                    tools:ignore="MissingConstraints"
                    android:src="@drawable/duolingo_icon_char"
                    android:scaleX="1.175"/>

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/setting"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"/>
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTambahTeman"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="320dp"
                android:layout_height="54dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:iconTint="@color/blue"
                android:text="TAMBAHKAN TEMAN"
                android:textAllCaps="true"
                android:textColor="@color/blue_light"
                android:textSize="18sp"
                app:icon="@drawable/add"
                app:iconGravity="textStart"
                app:iconSize="30dp"
                app:iconTint="@color/blue_light"
                app:layout_constraintTop_toBottomOf="@id/foll"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="2dp" />

            <View
                android:id="@+id/garis1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnTambahTeman"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center"
                app:cornerRadius="5dp"
                app:icon="@drawable/share_ios"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="30dp"
                app:iconTint="@color/blue_light"
                app:layout_constraintStart_toEndOf="@id/btnTambahTeman"
                app:layout_constraintTop_toTopOf="@id/btnTambahTeman"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="5px"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/teksRingkasan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_medium"
                android:paddingBottom="10dp"
                android:text="Ringkasan"
                android:textColor="@color/gray_light"
                android:textSize="80px"
                app:layout_constraintTop_toBottomOf="@id/garis1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.532" />

            <TextView
                android:id="@+id/teksLencana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_medium"
                android:text="Lencana Bulanan"
                android:textColor="@color/gray_light"
                android:textSize="60px"
                app:layout_constraintTop_toBottomOf="@id/card2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintVertical_bias="0.835" />

            <TextView
                android:id="@+id/teksLihat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_medium"
                android:text="Lihat Semua"
                android:textColor="@color/blue_light"
                android:textSize="60px"
                app:layout_constraintStart_toEndOf="@id/teksLencana"
                app:layout_constraintTop_toTopOf="@id/teksLencana"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"/>

            <LinearLayout
                android:id="@+id/kotakLencana"
                android:layout_width="375dp"
                android:layout_height="135dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/border_kotak"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/teksLencana"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center">

                <!-- Badge Desember -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/badgeDesember"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/badge_desember"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desember"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="140dp"
                    android:translationY="-20dp"
                    android:translationX="-17dp"
                    android:layout_weight="0.05"
                    android:background="#666666"
                    />

                <!-- Badge Januari -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/badgeJanuari"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/badge_january"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Januari"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="140dp"
                    android:translationY="-20dp"
                    android:translationX="-17dp"
                    android:layout_weight="0.05"
                    android:background="#666666"
                    />
                <!-- Badge April -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/badgeApril"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/badge_april"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="April"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/teksPencapaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_medium"
                android:text="Pencapaian"
                android:textColor="@color/gray_light"
                android:textSize="60px"
                app:layout_constraintTop_toBottomOf="@id/kotakLencana"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/teksLihat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_medium"
                android:text="Lihat Semua"
                android:textColor="@color/blue_light"
                android:textSize="60px"
                android:layout_marginStart="118dp"
                app:layout_constraintStart_toEndOf="@id/teksPencapaian"
                app:layout_constraintTop_toTopOf="@id/teksPencapaian"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0" />

            <LinearLayout
                android:id="@+id/kotakPencapaian"
                android:layout_width="375dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/border_kotak"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/teksPencapaian"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Badge Desember (Kiri) -->
                <ImageView
                    android:id="@+id/capai1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/capai1"/>

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="140dp"
                    android:translationY="-20dp"
                    android:translationX="-17dp"
                    android:layout_weight="0.1"
                    android:background="#666666"
                    />

                <!-- Badge Januari (Tengah) -->
                <ImageView
                    android:id="@+id/capai2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/capai2"/>

                <!-- Spacer -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="140dp"
                    android:translationY="-20dp"
                    android:translationX="-17dp"
                    android:layout_weight="0.1"
                    android:background="#666666"
                    />
                <!-- Badge April (Kanan) -->
                <ImageView
                    android:id="@+id/capai3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/capai3"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/transparent"
                android:outlineSpotShadowColor="@color/gray_light"
                app:strokeWidth="2dp"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toBottomOf="@id/teksRingkasan"
                android:translationX="10dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/icon9"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="-20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginStart="-30dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Runtunan hari"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/transparent"
                android:outlineSpotShadowColor="@color/gray_light"
                app:strokeWidth="5px"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toBottomOf="@id/card1"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/icon7"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="-20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safir"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginStart="-20dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liga Saat ini"
                            android:textSize="14sp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/transparent"
                android:outlineSpotShadowColor="@color/gray_light"
                app:strokeWidth="5px"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toBottomOf="@id/teksRingkasan"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/icon8"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9441"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginStart="-28dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total XP"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:layout_marginStart="-23dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/transparent"
                android:outlineSpotShadowColor="@color/gray_light"
                app:strokeWidth="5px"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintTop_toBottomOf="@id/card3"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/icon10"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginStart="-40dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posisi 3 besar"
                            android:textSize="14sp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/icon" />

    <LinearLayout
        android:id="@id/icon"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/Duolinggo_Background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/home"
            android:contentDescription="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon3"
            android:contentDescription="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon4"
            android:contentDescription="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon5"
            android:contentDescription="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon11"
            android:contentDescription="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon6"
            android:contentDescription="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>