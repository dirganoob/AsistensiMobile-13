<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- App Bar with Image Title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp">

        <!-- Replace TextView with ImageView for title -->
        <ImageView
            android:id="@+id/iv_title_logo"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/header_logo"
            android:contentDescription="@string/app_title" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- RecyclerView for character list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/pagination_container"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Pagination Control Container -->
    <LinearLayout
        android:id="@+id/pagination_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="8dp">

        <!-- Previous Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_prev_page"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/previous"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/primary" />

        <!-- Page Counter -->
        <TextView
            android:id="@+id/tv_page_counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/page_indicator"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_page"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/next"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/primary" />
    </LinearLayout>

    <!-- No Connection View -->
    <LinearLayout
        android:id="@+id/tv_no_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_no_connection"
            android:contentDescription="@string/no_connection" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_internet_connection"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_internet_and_retry"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_again"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_retry"
            android:textColor="@android:color/white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </LinearLayout>

    <!-- Loading Overlay (Included layout) -->
    <include
        android:id="@+id/loading_overlay"
        layout="@layout/loading_overlay" />

</RelativeLayout>