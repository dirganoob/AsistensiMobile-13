<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.UnhasLibrary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Button style -->
        <item name="buttonStyle">@style/Widget.UnhasLibrary.Button</item>
    </style>

    <!-- Detail Activity theme with transparent status bar -->
    <style name="Theme.UnhasLibrary.Detail" parent="Theme.UnhasLibrary">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Button style -->
    <style name="Widget.UnhasLibrary.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/unhas_red</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Chip style for genre filters -->
    <style name="Widget.UnhasLibrary.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/light_gray</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <style name="UnhasRedButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/unhas_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item> <!-- Biar lebih rounded -->
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="elevation">4dp</item> <!-- Tambahkan shadow -->
    </style>

</resources>